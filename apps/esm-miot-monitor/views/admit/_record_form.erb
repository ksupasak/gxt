<%

	admit = Admit.find(params[:admit_id])
	
	patient = admit.patient
	score = admit.score
	station = admit.station
	
	staiton_name = ""
	
	station_name = station.name if station.name
	
	
	data = settings.senses[settings.name][station_name]
	if data['bp'] and t = data['bp'].split("/")
		data['bp_sys'] = t[0].to_i
		data['bp_dia'] = t[1].to_i
		
	end
	
	record = nil
	
	if params[:id]
		
		record = admit.records.find params[:id]
	else
		record = admit.records.new
		record.admit_id = admit.id
		record.stamp = Time.now 
		
		%w{ bp pr hr rr temp spo2 bp_sys bp_dia}.each do |i|
		
			record[i] = data[i]
			
		end
		
		
	end
	

%>
<input type="hidden" name="admit_id" value="<%=record.admit_id %>">
<div class="field">
<label>Time</label>
<div class="value">
 	<!-- <select name="time">
		<option value="1">1</option>
	</select > -->
	
	<%=text_field_tag  "record[stamp]", "#{record.stamp}"%>
	
</div>
</div>


 
 <div class="field">
 <label>bp_sys/bp_dia</label>
 <div class="value">
	<%=text_field_tag  "record[bp_sys]", "#{record.bp_sys}" %>/	<%=text_field_tag  "record[bp_dia]", "#{record.bp_dia}" %>
 </div>
 </div>
 
 <div class="field">
 <label>HR</label>
 <div class="value">
	<%=text_field_tag  "record[hr]", "#{record.hr}" %>
 </div>
 </div>
 
 <div class="field">
 <label>PR</label>
 <div class="value">
	<%=text_field_tag  "record[pr]", "#{record.pr}" %>
 </div>
 </div>
 
 <div class="field">
 <label>SpO2</label>
 <div class="value">
	<%=text_field_tag  "record[spo2]", "#{record.spo2}" %>
 </div>
 </div>
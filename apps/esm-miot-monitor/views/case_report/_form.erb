<%# this.model.fields.sort.collect{|i| i.name}.join(" ")%>
<%# this.model.keys['date'].type%>

<%
	
	@record.admit_id = params[:admit_id] if params[:admit_id]
	
	default_center_name = Setting.get(:default_center_name)
	
	@record.center_name = default_center_name unless @record.center_name 
	
	
%>


<%
	keys = this.model.keys.collect{|i| i unless i[0][0]=='_'}.compact
	for i in keys
%>
<% if i[0] =='admit_id' %>
	
    <div class="form-group">

      <input type="hidden" class="form-control" id="record-<%=i[0]%>" name="record[<%=i[0]%>]" value="<%=@record[i[0]]%>" placeholder="<%=i[0]%>">
    </div>
	
	
	<% elsif i[0] =='result' %>
	
	    <div class="form-group">

	      <input type="checkbox" class="form-control" id="record-<%=i[0]%>" name="record[<%=i[0]%>]" value="1"  <%='checked="checked"' if @record[i[0]] == '1' %> placeholder="<%=i[0]%>"> ไม่พบเหตุ
		  
	      <input type="checkbox" class="form-control" id="record-<%=i[0]%>" name="record[<%=i[0]%>]" value="2" <%='checked="checked"' if @record[i[0]] == '2' %> placeholder="<%=i[0]%>"> พบเหตุ
		  
		  
	    </div>
	
	
<% else %>
  <div class="form-group">
    <label for="product-name"><%=i[0].humanize%></label>
    <input type="text" class="form-control" id="record-<%=i[0]%>" name="record[<%=i[0]%>]" value="<%=@record[i[0]]%>" placeholder="<%=i[0]%>">
  </div>
<% end %>

<% end %>



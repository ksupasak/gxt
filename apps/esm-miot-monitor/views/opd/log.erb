<% 
records = DataRecord.all
%>
<link href="<%=url_for 'css/opd.css'%>" rel="stylesheet">
<h1>Data Log</h1>
<div class="row-fluid">
    <div class="jumbotron">
    <table class="table">
    <thead>
        <tr class="table-primary">
            <th>Date</th>
            <th>HN</th>
            <th>Patient Name</th>
			
            <th>Weight</th>
            <th>Height</th>
            <th>BMI</th>
			
            <th>BP</th>
            <th>PR</th>
            <th>Spo2</th>
			
            <th>Scoring type</th>
            <th>Scoring</th>
        </tr>
    </thead>
    <tbody>
		<% for i in records 
			
		data = JSON.parse(i.data)
		weight = data['weight']
		height = data['height']
		bmi = data['bmi']		
		
		admit = Admit.find i.admit_id
		patient = Patient.find admit.patient_id if admit
		
		%>
		
        <tr>
             <td><%=i.stamp%></td>
             <td><%=patient.hn%></td>
	     	 <td><%=patient.first_name%> <%=patient.last_name%></td>
			
			<td><%=weight%>
            <svg class="symbol">
                <use xlink:href="#t-down" />
            </svg>
			</td>
            <td><%=height%>
            <svg class="symbol">
                <use xlink:href="#t-down" />
            </svg>
			</td>
              <td><%= bmi %></td>
			<td><%= i.bp %></td>
            <td><%= i.pr %></td>
            <td><%= i.spo2 %></td>
          
			    <td><%= 'OPD' %></td>
			  
            <td><span class="badge badge-pill badge-success badge-score"><%=i.score%></span></td>   
        </tr>
		
		<% end %>
        <!-- <tr>
            <td>19/04/2020</td>
            <td>66.9 </td>
            <td>120/80</td>
            <td>NEWS</td>
            <td><span class="badge badge-pill badge-warning badge-score">4</span></td>
        </tr> -->
    </tbody>
    </table>
    </div>
</div>
<%= link_to '<< Home', 'index'  %>
<script>
    function hnPush(s){
        v = $(".display-hn").html().trim()
        b = s.html()
        if(b.indexOf("Del")!==-1){
            v = v.substr(0,v.length-1)
        }else{
            v+=b
        }
        $(".display-hn").html(v)       
    }

    $(".btn-hn").on("click",function(){
        try{
            hnPush($(this))
        }catch(e){}
        return false;
    })
	
	$('.btn-opd').click(function(){	
		hn = $(".display-hn").html().trim()
		window.location.replace("entry?hn="+hn);
	})
    //$(".display-hn").html('a')
</script>


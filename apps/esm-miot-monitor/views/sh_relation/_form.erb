	<%

	list = SHUserHospital.where(:provider_type=>'doctor').all
		
	%>
  <div class="form-group">
    <label for="">Hospital Doctor</label>
	
	<select id="record-hospital-doctor" name="record[hospital_doctor_id]" class="form-control" value="<%=@record['hospital_doctor_id']%>">

	<% for j in list.collect{|k| 
			
		provider = Provider.find k.provider_id
			
		[k.id,"#{provider.name}"]
	
		} 
		
		%>
	  <option value="<%=j[0]%>" <%="selected" if @record['hospital_doctor_id']==j[0] %>><%=j[1]%></option>
	<% end %>
	</select>
  </div>
  
  

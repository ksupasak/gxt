<table class="table table-striped">
<% 
	
	keys = this.model.keys.collect{|i| i unless i[0][0]=='_'}.compact
%>
<thead>
	<tr>
	<% for j in keys %>
		<th><%=j[0].humanize %></th>
	<% end %>
	</tr>
</thead>
<tbody>
<%	
	for i in this.model.where({}).sort(:name=>1).all
%>
<tr>
	<% for j in keys %>
	<% if j[0] == 'zone_id'
		zone_name = '-'
		zone_name = i.zone.name if i.zone_id and i.zone
	%>
		<td><%=zone_name %></td>
	<% else %>
		<td><%=i[j[0]] %></td>
	<% end %><% end %>
	<td>
		
	<%=link_to 'Show',"show?id=#{i.id}",:class=>'btn btn-default btn-small' %>
	<%=link_to 'Edit',"edit?id=#{i.id}",:class=>'btn btn-info  btn-small' %>
	<%=link_to 'Del',"destroy?id=#{i.id}",:class=>'btn btn-danger  btn-small' %>
	</td>
</tr>
<% end %>
</tbody>
</table>

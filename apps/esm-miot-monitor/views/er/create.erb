<%

    record = ERCase.new 

%>
<div class="">
    <h2 class="">ER Case Create</h2>
    <form action="/submit_case" method="POST">
        <!-- Case Details -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">Case Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Case No</label>
                        <input type="text" class="form-control" name=record[case_no] value="<%= record['case_no'] %>">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Case Type</label>
                        <input type="text" class="form-control" name=record[case_type] value="<%= record['case_type'] %>">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Patient Type</label>
                        <input type="text" class="form-control" name=record[patient_type] value="<%= record['patient_type'] %>">
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Details -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">Contact Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Contact Name</label>
                        <input type="text" class="form-control" name=record[contact_name] value="<%= record['contact_name'] %>">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Contact Phone</label>
                        <input type="text" class="form-control" name=record[contact_phone] value="<%= record['contact_phone'] %>">
                    </div>
                </div>
            </div>
        </div>

        <!-- Patient Details -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">Patient Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Patient Name</label>
                        <input type="text" class="form-control" name=record[patient_name] value="<%= record['patient_name'] %>">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Gender</label>
                        <select class="form-control" name=record[patient_gender]>
                            <option <% if record['patient_gender'] == 'Male' %>selected<% end %>>Male</option>
                            <option <% if record['patient_gender'] == 'Female' %>selected<% end %>>Female</option>
                            <option <% if record['patient_gender'] == 'Other' %>selected<% end %>>Other</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-4">
                        <label class="form-label">Age</label>
                        <input type="number" class="form-control" name=record[patient_age] value="<%= record['patient_age'] %>">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Birth Date</label>
                        <input type="date" class="form-control" name=record[patient_birth_date] value="<%= record['patient_birth_date'] %>">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Nationality</label>
                        <input type="text" class="form-control" name=record[patient_nationality] value="<%= record['patient_nationality'] %>">
                    </div>
                </div>
            </div>
        </div>

        <!-- Diagnosis -->
        <div class="card mb-3">
            <div class="card-header bg-warning text-dark">Diagnosis</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Diagnosis</label>
                        <input type="text" class="form-control" name=record[diagnosis] value="<%= record['diagnosis'] %>">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Diagnosis ICD</label>
                        <input type="text" class="form-control" name=record[diagnosis_icd] value="<%= record['diagnosis_icd'] %>">
                    </div>
                </div>
            </div>
        </div>

        <!-- Other Information -->
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Admit</label>
                <input type="text" class="form-control" name=record[admit] value="<%= record['admit'] %>">
            </div>
            <div class="col-md-4">
                <label class="form-label">Created At</label>
                <input type="datetime-local" class="form-control" name=record[created_at] value="<%= record['created_at'] %>">
            </div>
            <div class="col-md-4">
                <label class="form-label">Updated At</label>
                <input type="datetime-local" class="form-control" name=record[updated_at] value="<%= record['updated_at'] %>">
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Submit Case</button>
    </form>
</div>

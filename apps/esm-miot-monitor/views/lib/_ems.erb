<%



    def self.get_time
    
        return Time.now.strftime("%d/%m/%Y %H:%H")

    end


%>

<script>

	function refresh_remote(){
		
		
		$('*[data-remote="true"]').submit(function(e){
		
		    var form = $(this);
		    var url = form.attr('action');
			var id = form.attr('data-remote-update')
    
		       $.ajax({
		              type: "POST",
		              url: url,
		              data: form.serialize(),
		              success: function(data)
		              {
		                  $('#'+id).html(data)
				      }
		            });

			e.preventDefault();
		
		})
		
		
	}
	
	$(document).ready(function(){
		
		refresh_remote();

	})
</script>	
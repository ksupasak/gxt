<%# this.model.fields.sort.collect{|i| i.name}.join(" ")%>
<%# this.model.keys['date'].type%>
<%


	keys = this.model.keys.collect{|i| i unless i[0][0]=='_'}.compact



	for i in keys


	name = i[0]

	%>

	<%
	if name=='zone_id'

	list = Zone.all

	%>
  <div class="form-group">
    <label for="product-name"><%=i[0].humanize %></label>

	<select id="record-<%=name%>" name="record[<%=name%>]" class="form-control" value="<%=@record[name]%>">

	<% for j in list.collect{|k| [k.id,"#{k.name}"]} %>
	  <option value="<%=j[0]%>" <%="selected" if @record[name]==j[0] %>><%=j[1]%></option>
	<% end %>
	</select>
  </div>

	<%
	elsif name=='station_id'

	list = Station.all

	%>
  <div class="form-group">
    <label for="product-name"><%=i[0].humanize %></label>

	<select id="record-<%=name%>" name="record[<%=name%>]" class="form-control" value="<%=@record[name]%>">

	<% for j in list.collect{|k| [k.id,"#{k.name} @ #{k.zone.name if k.zone}"]} %>
	  <option value="<%=j[0]%>" <%="selected" if @record[name]==j[0] %>><%=j[1]%></option>
	<% end %>
	</select>
  </div>
	<%
	elsif name=='location_policy'

	list = Station.all

	%>
  <div class="form-group">
    <label for="product-name"><%=i[0].humanize %></label>

	<select id="record-<%=name%>" name="record[<%=name%>]" class="form-control" value="<%=@record[name]%>">

	<% for j in [['','']] + %w{APP DVR}.collect{|k| [k,"#{k}"]} %>
	  <option value="<%=j[0]%>" <%="selected" if @record[name]==j[0] %>><%=j[1]%></option>
	<% end %>
	</select>
  </div>
	<%
elsif name=='msg_channel'

	list = EMSChannel.all

	%>
  <div class="form-group">
    <label for="channel_id"><%=i[0].humanize %></label>

	<select id="record-<%=name%>" name="record[<%=name%>]" class="form-control" value="<%=@record[name]%>">

	<% for j in list %>
	  <option value="<%=j.name%>" <%="selected" if @record[name]==j.name %>><%=j.name%></option>
	<% end %>
	</select>
  </div>
<%
	
elsif name=='image'

	
%>

  <div class="form-group">
    <label for="image"><%=i[0].humanize %></label>
	<%
	att = Attachment.find @record.image
	if att
	%>
	<img src="<%=att.path%>" width="200">
	<%
	end
	%>
    <input type="file" name="file" class="form-control" >	
 </div>


<% else %>
  <div class="form-group">
    <label for="product-name"><%=i[0].humanize %></label>
    <input type="text" class="form-control" id="record-<%=i[0]%>" name="record[<%=i[0]%>]" value="<%=@record[i[0]] if @record%>" placeholder="<%=i[0]%>">
  </div>
 <% end %>
<% end %>




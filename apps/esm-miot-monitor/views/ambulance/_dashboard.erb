<%

  zone = Zone.find(session[:current_zone])

%>
<div class="row">

<%

    keys = %w{name vehicle_name plate_number phone device_no msg_channel image zone_id}

	for i in this.model.where(:zone_id=>zone.id)
%>
<div class="col-12 col-md-3  p-sm-1">
<div class="card p-4">
<div class="row">
<div class="col-12">
<h4><%=link_to i.name, "show?id=#{i.id}"%></h4>
</div>


<% for j in keys

    content = nil

    case j
    when 'zone_id'
      content = i.zone.name
    when 'image'
  	  
	  att = Attachment.find i.image
	  if att
		 
		  content = "<br/><img src='#{att.path}'   style='max-height: 200px; max-width: 200px' ><br/><br/><center>#{content}</center>"
		  
	  end
	  
	  
	else
      content = i[j]
    end







  %>

  	<%=content%>

  	<% end %>
</div>
</div>
</div>


	
<% end %>
</div>

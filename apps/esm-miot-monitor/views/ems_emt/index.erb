  })


function noti_msg(msg) {
	Lobibox.notify('warning', {
		pauseDelayOnHover: true,
		size: 'mini',
		rounded: true,
		delayIndicator: false,
		icon: 'bx bx-error',
		continueDelayOnInactiveTab: false,
		position: 'top center',
		msg: msg
	});
}


  function update(lines){
    console.log(lines)
    show(lines[0])
  }
$(document).ready(function(){

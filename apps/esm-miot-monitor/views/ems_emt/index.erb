<script>




  var noti_status=false;
  var modal_id = null;

 function modal(id){

     $(id).css('display','block')
     $(id).addClass('show')
     modal_id= id
     $(id).find('button[data-bs-dismiss="modal"]').each(function(){
       $(this).click(function(){
          $(modal_id).hide()
          $('.modal-x').hide()
       })

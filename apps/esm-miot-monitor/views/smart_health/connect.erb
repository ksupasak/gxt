	function deviceSend(msg){
		
	    clearTimeout(myVar);
		
	    myVar = setTimeout(deviceSendPost, 500);
	
		$('.v-entry').css('display','none')	
	
		$('#msg').html(msg);
		
		map = {}
		
		list = msg.split("|")
		for(var i=0;i<list.length;i++){
			p = list[i].split(":");
			map[p[0]] = p[1];
		}
		
		if(map['PR']=='-99'){
			map['PR']='-'
			map['SPO2']='-'
		}	
			
		if(map['T1']&&map['T1']!=''){
			
			c = parseFloat(map['T1']).toFixed(1)
			$('.temp').html(c);
			checkInput('temp')
		}
		
		if(map['STATUS']=='M0'||map['STATUS']=='M1'){		
		    if(wait_monitor||map['STATUS']=='M1'){
                $('.pr').html(map['PR'])
                $('.spo2').html(map['SPO2'])
                checkInput('pr')
                checkInput('spo2')
			
			
                $('.rr').html(map['RR'])
                checkInput('rr')
                // $('.temp').html(map['T1'])
              
                

                if(map['STATUS']=='M1'){	
                    $('.sys').html(map['SYS'])
                    $('.dia').html(map['DIA'])
                    $('.mean').html(map['MEAN'])
                    
					checkInput('sys')
                    checkInput('dia')
					
                    wait_monitor = false;
                    // $('.mean').html(map['MEAN'])
                }
            }
		}
		
		if(map['STATUS']=='T1'){
				c = parseFloat(map['T1']).toFixed(1)
				$('.temp').html(c);
				checkInput('temp')
		}
		
		if(map['STATUS']=='G1'){	
			
			var g = parseFloat(map['GLUCOSE'])
			
			
			if(map['STATUS']=='G1'){
				$('.glucose').html(g);
				
                checkInput('glucose')
				
			}
			
			
		}
		
		if(map['STATUS']=='S0'||map['STATUS']=='S1'){	
			
			var w = parseFloat(map['WEIGHT'])
			var h = parseFloat(map['HEIGHT'])
			
			
			var bmi = (w/(h*h)).toFixed(2);

			
			if(map['STATUS']=='S1'){
				$('.height').html((h*100).toFixed(1));
				$('.weight').html(w);
                $('.bmi').html(bmi);
				
                checkInput('height')
                checkInput('weight')
                checkInput('bmi')
				wait_scaler=false;
			}
			
			
		}
		
		
		sos()
		
	}


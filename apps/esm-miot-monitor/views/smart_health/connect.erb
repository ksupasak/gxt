        }
        isComplete = true
        $(".d-entry-dark,.d-entry").each(function(){
            if($(this).attr('class').indexOf("empty")!==-1&&isComplete) isComplete=false;
        })
		
		// if(v=='-')isComplete=true;

        if(isComplete){
            if($(".btn-entry").attr('class')){

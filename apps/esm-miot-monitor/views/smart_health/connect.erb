	function genList(t,v){
		let map = new Map([
			['E',['E1,ไม่ลืมตาเลย(none)','E2,ลืมตาเมื่อเจ็บ(pain)','E3,ลืมตาเมื่อเรียกชื่อ(speech)','E4,ลืมตาเอง(spontaneous)']],

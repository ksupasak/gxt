	function sos(){
		
		score = 0
		count = 0 
		list = ['spo2', 'bp_sys', 'temp', 'pr']
		err = [];
		for(var i=0;i<list.length;i++){
			
			v = list[i]
			s = 0 
			title = ""
			t = $('.'+v).html().trim()
			if(t!=''&&t!='-'&&t!='0'){
				x = parseFloat(t)
				count++;
				if(v=='temp'){
					title = "temp"
					if(x<=35)s=-2;
					if(x>=35.1&&x<=36)s=-1;
					if(x>=36.1&&x<=38)s=0;
					if(x>=38.1&&x<=38.4)s=1;
					if(x>=38.5)s=2;
					
				}else
				if(v=='bp_sys'){
					title = "BP systolic"
					if(x<=80)s=-3;
					if(x>=81&&x<=90)s=-2;
					if(x>=91&&x<=100)s=-1;
					if(x>=101&&x<=180)s=0;
					if(x>=181&&x<=199)s=1;
					if(x>=200)s=2;
					
				}else
				if(v=='pr'){
					title = "Pulse rate"
					if(x<=40)s=-3;
					if(x>=41&&x<=50)s=-1;
					if(x>=51&&x<=100)s=0;
					if(x>=100&&x<=120)s=1;
					if(x>=121&&x<=139)s=2;
					if(x>=140)s=3;
					
				}
				
				if(s!=0){
					score+=Math.abs(s)
					if(s<0)
						err.push("- Under "+title)
					else
						err.push("- Over "+title)
					
				}
				
			}
			
		}
		console.log(err)
		
		if(count>0){
			$('.score').html(score)
 	   		checkInput('score')
		}
		$('.alert').html(err.join('&nbsp;'))
		
		
	}
	
	

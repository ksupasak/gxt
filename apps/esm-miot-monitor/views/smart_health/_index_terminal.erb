<script>

function backstep(){
	s = $("#hidstep").val()
	try{
		i = parseInt(s)
		i--
		if(i<1){ 
			i=1
		}else{
			$(".step").slideUp()
			$(".step"+i).slideDown()
		}
		$("#hidstep").val(i)
		if(i==1||i==6){
			$("#div-back").hide()
			$("#div-next").show()
		}else if(i==5){
			$("#div-next").hide()
			$("#div-back").show()
		}else{
			$("#div-back").show()
			$("#div-next").show()
		} 
	}catch(e){}

}

function gostep(step){
    s = $("#hidstep").val()
    try{
        i = step
        if(i==7) i=1
        $(".step").slideUp()
        $(".step"+i).slideDown()
        $("#hidstep").val(i)
		if(i==1||i==6){
			$("#div-back").hide()
			$("#div-next").show()
		}else if(i==5){
			$("#div-next").hide()
			$("#div-back").show()
		}else{
			$("#div-back").show()
			$("#div-next").show()
		} 
    }catch(e){}
}


function nextstep(){
    s = $("#hidstep").val()
    try{
        i = parseInt(s)
        i++
        if(i==7) i=1
        $(".step").slideUp()
        $(".step"+i).slideDown()
        $("#hidstep").val(i)
		if(i==1||i==6){
			$("#div-back").hide()
			$("#div-next").show()
		}else if(i==5){
			$("#div-next").hide()
			$("#div-back").show()
		}else{
			$("#div-back").show()
			$("#div-next").show()
		} 
    }catch(e){}

}
$(document).ready(function(){
    $("#btn-next").click(function(){
        nextstep()
    })
    $("#btn-back").click(function(){
        backstep()
    })
    $(".step").hide()
    $(".step1").show()
	$("#div-back").hide()
})
</script>


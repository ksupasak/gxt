		<option value="abnormal">ผิดปกติ</option>
		</select>
	</div>
	
	
	<div class="col">
	<input type="submit" value='ค้นหา' class="btn btn-success"/>
	<a href="patient_export" class="btn btn-info" id="btnExport">Download</a>
	</div>

	</div>	
	
	
</form>
	

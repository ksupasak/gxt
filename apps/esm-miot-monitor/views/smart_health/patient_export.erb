			manage = false;
			<% if @current_hospital %>
			manage = true;
			<% end %>
			
		    $.get( "patient_export_partial", {manage: manage, query: query, sort: sort,  provider_id: provider_id, provider_type:provider_type, hospital_id:hospital_id, network_id: network_id, row:row, from:from, to:to, status:status, pstatus:pstatus} )
		    .done(function( data ) {
				$('#patient-query').html(data);
			
		    });
			
		}
		
		
		$('.query').submit(function(event){
			// alert('difj')
			
			queryPatient();
			
			event.preventDefault();
			return false;
		});
		
		queryPatient();
		
	})
		
	</script>
	
	




<script>
function networkshow(id){
	if(id=='all'){
		$(".tr-network").show()
		$(".count").html($(".tr-network").length)
	}else{
		$(".tr-network").hide()
		$("."+id).show()
		
		$(".count").html($("."+id).length)
	}
}
function filter_p(s){
	if(s&&s!=''){
		$(".tr-p").hide()
		$(".tr-p").each(function(i,v){
			var t = $(v).attr("text")
			if(t.indexOf(s)!=-1) $(v).show()
		})
	}else{
		$(".tr-p").show()
	}
}
$(document).ready(function(){

	$("#search-p2").keyup(function(){
		filter_p($(this).val())
	})

	$("#record-network_id").change(function(){
		networkshow($(this).val())
		//document.location.href="index?n="+$(this).val()+'&date='+$("#p-date").val()
	})
	try{
		$('#query_from').datepicker({
			format: "dd/mm/yyyy"
		});
		$('#query_to').datepicker({
			format: "dd/mm/yyyy"
		});
	}catch(e){alert(e)}
})

</script> 


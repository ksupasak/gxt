	<% end %>

	
		
	</div>

	<div class="col">
	แสดง <select type='select' name="query[row]" id="query_row">
		<option vlaue="20">20</option>
		<option vlaue="50">50</option>
		<option vlaue="100">100</option>
		<option vlaue="0">All</option>
		</select>

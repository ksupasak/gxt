<style>
	.control-area{
		display:none;
	}
	
	/* width */
	::-webkit-scrollbar {
	  width: 5px;
	  height:5px;
	}

	/* Track */
	::-webkit-scrollbar-track {
	  background: #f1f1f1; 
	}
 
	/* Handle */
	::-webkit-scrollbar-thumb {
	  background: #ccf; 
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
	  background: #ccc; 
	}
	
	.message-blue {
	    position: relative;
	    margin-left: 20px;
	    margin-bottom: 20px;
	    padding: 10px;
	    padding-bottom: 20px;
		
	    background-color: #A8DDFD;
	    width: 50%;
/*	    height: 50px;*/
	    text-align: left;

	    border: 1px solid #97C6E3;
	    border-radius: 10px;
	}

	.message-orange {
	    position: relative;
	    margin-bottom: 20px;
	    padding-bottom: 20px;
		
	    margin-left: calc(100% - 50%);
	    padding: 10px;
	    background-color: #f8e896;
	    width: 50%;
/*	    height: 50px;*/
	    text-align: left;

	    border: 1px solid #dfd087;
	    border-radius: 10px;
	}

	.message-content {
	    padding: 0;
	    margin: 0;
	}

	.message-timestamp-right {
	    position: absolute;
	    font-size: .65em;
	    font-weight: 300;
	    bottom: 3px;
	    right: 5px;
	}

	.message-timestamp-left {
	    position: absolute;
	    font-size: .65em;
	    font-weight: 300;
	    bottom: 3px;
	    left: 5px;
	}

	.message-blue:after {
	    content: '';
	    position: absolute;
	    width: 0;
	    height: 0;
	    border-top: 15px solid #A8DDFD;
	    border-left: 15px solid transparent;
	    border-right: 15px solid transparent;
	    top: 0;
	    left: -15px;
	}

	.message-blue:before {
	    content: '';
	    position: absolute;
	    width: 0;
	    height: 0;
	    border-top: 17px solid #97C6E3;
	    border-left: 16px solid transparent;
	    border-right: 16px solid transparent;
	    top: -1px;
	    left: -17px;
	}

	.message-orange:after {
	    content: '';
	    position: absolute;
	    width: 0;
	    height: 0;
	    border-bottom: 15px solid #f8e896;
	    border-left: 15px solid transparent;
	    border-right: 15px solid transparent;
	    bottom: 0;
	    right: -15px;
	}

	.message-orange:before {
	    content: '';
	    position: absolute;
	    width: 0;
	    height: 0;
	    border-bottom: 17px solid #dfd087;
	    border-left: 16px solid transparent;
	    border-right: 16px solid transparent;
	    bottom: -1px;
	    right: -17px;
	}
	
</style>


    room = Room.find params[:id]
	zone = Zone.find room.zone_id
	
	beds = room.beds 
	
	admits = []
	
	for bed in beds 
	
		admit =  Admit.where(:bed_id=> bed.id, :zone_id=>session[:current_zone], :status=>'Admitted').first
	 	
		admits << admit
	end
	
	
	
	
%>


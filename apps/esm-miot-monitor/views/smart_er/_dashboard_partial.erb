									</div>
									<div class="row">
										<div class="col-12 d-flex justify-content-center" style="font-size:0.6em" >
										
											<%= admit.duration[0] %>
										
										</div>
									</div>
									
								</div>
								
								<div class="col-7">
									<div class="row">
										<div class="col-12">
										
											  <%= patient.hn %>
										 	
										</div>
									</div>
									<div class="row" >
										<div class="col-12"   style="font-size:0.8em">
										
											<b><%= patient %></b>
										
										</div>
										
									</div>
									
									<div class="row">
										<div class="col-12" style="overflow:hidden;font-size:0.8em" >
										
											<%= report.chief_complaint %>
										
										</div>
										
									</div>
								
								</div>
							
							</div>	</a>
								</div>
                            </div>
							    <!-- </a> -->
                           <% end %>

                        </div>
                      

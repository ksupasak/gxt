<%
	
admit = Admit.find params[:id]
patient = admit.patient

data_records = admit.records
	
%>


<script src="https://kit.fontawesome.com/13a3acd719.js" crossorigin="anonymous"></script>
<link href="<%=url_for('css/er.css?=22')%>" rel="stylesheet">
    <!--Content-->
    <section>
        <div class="container">
            <!--patient card-->
            <div class="card patient-info">
                <div class="card-body d-flex align-items-center">
				 <div class="col">
				     <h6 class="font-weight-bold" id="patient-name"><%=patient.to_s%></h6>
				     <span class="col p-0 " id="HN">HN: <%=patient.hn%></span>
				     <span class="col p-0 mr-3" id="age">อายุ: <%=patient.to_age %> ปี</span>
				     <span class="col p-0" id="gender">เพศ: <%=patient.gender%></span>
				 </div>
				 <div class="col text-right">
				     <h6 class="" id="arrival-time">Arrival:
				         <span><%= admit.admit_stamp.strftime("%H:%M")%></span>
				     </h6>
				     <span id="duration">Duration:
				         <span><%= admit.duration[0] %></span>
				     </span>
				 </div>
                </div>
            </div>
            <!--end of patient card-->
            <!--nurse summary-->
            <h4 class="font-weight-bold mt-4">Summary Report</h4>
            <div class="card sum-report mt-4">
                <div class="card-header card-vital">
                    <strong> Triage Assessment</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">09:58</div>
                        <div class="col-8">
                            <span class="pr-2">Patient's triage acuity: </span>
                            <span class="badge badge-danger">
                                <h6 class="m-0 pl-2 pr-2">วิกฤติ</h6>
                            </span>
                        </div>
                    </div>
                    <div class="row mt-3 mb-2">
                        <div class="col-4">13:25</div>
                        <div class="col-8">
                            <span class="pr-2">Appear in no apparent distress, Behavior is agitated Complaint of pain in
                                chest </span>
                        </div>
                    </div>
                </div>
                <!--vital sign part-->
                <div class="card-header card-vital">
                    <strong> Vital Sign</strong>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-vital text-center">
                        <thead>
                          <tr>
                            <th scope="col">เวลา</th>
                            <th scope="col">BP</th>
                            <th scope="col">Pulse/SpO<sub>2</sub></th>
                            <th scope="col">RR</th>
                            <th scope="col">BT</th>
                    
                            <th scope="col">Pain</th>
							
                            <th scope="col">Staff</th>
                          </tr>
                        </thead>
                        <tbody>
                         
						 <%
						 	   
						 for i in data_records
							
						 %>
						 
						  <tr>
                            <th scope="row">09:58</th>
                            <td><%=i.bp%></td>
                            <td><%=i.pr%>/<%=i.spo2%></td>
                            <td><%=i.rr%></td>
                            <td><%=i.temp%></td>
                       
                            <td>-</td>
                            <td>นารารัตน์</td>
                          </tr>
                         
						 <% end  %>
						 
                        </tbody>
                      </table>

                </div>
            </div>


        </div>
        <div class="d-flex justify-content-center mt-5">
            <a href="edit?admit_id=<%=admit.id%>" class="btn btn-primary btn-submit d-flex align-items-center justify-content-center">
                <img src="../assests/heart.svg" alt="heart" class="pr-3"/>
                Record
            </a>&nbsp;
			
            <a href="connect?admit_id=<%=admit.id%>" class="btn btn-primary btn-submit d-flex align-items-center justify-content-center">
                <img src="../assests/heart.svg" alt="heart" class="pr-3"/>
                วัดค่า
            </a>

        </div>
        <br>
        <a href="index" class="d-flex justify-content-center">
            <p>กลับสู่หน้าหลัก</p>
        </a>
        </div>
        </div>
    </section>
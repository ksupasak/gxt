<%
	
	admits =  Admit.where(:zone_id=>session[:current_zone], :status=>'Admitted').all
	
	\
	
%>

<style>
	.admit{
		
		padding:10px;
	
		border:0px solid #ccc;
		
		
	}
	.admit-content{
		
		border-radius: 10px;
		border:0px solid #aaa;
		padding:10px;
	    background-color: #334351;
		
	}
	
	.level-content{
		border:1px solid #aaa;
		width:50px;
		height:20px;
		
	}
	
	.level-content.red{
		background:#FF3C3C;
	}
	
	.level-content.yellow{
		background:#FFAB2C;
	}
	.level-content.green{
		background:#42B7AB;
	}
	.level-content.white{
		background:#fff;
	}
	.level-content.black{
		background:#000000;
	}
	
	.btn-triage-red.active{
	  background: #FF3C3C;
	}



</style>
<script src="https://kit.fontawesome.com/13a3acd719.js" crossorigin="anonymous"></script>
<link href="<%=url_for('css/er.css?=22')%>" rel="stylesheet">
    <!--Content-->
    <section>
        <div class="container">
                <header class=" d-flex align-items-center title-fill">
                    <div class="col">
                        <p class="mb-0"><strong>ER ZONE</strong></p>
                        <small>Observation Room</small>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <button class=" btn  er-scan">
                            <img src="<%=url_for('img/svg/scan.svg')%>" alt="scan" class="p-1" />
                            Scan
                        </button>
                    </div>
                </header>
                <br>
                <!--er room-->
                <section id="er-room">
                    <div class="container-fluid">
                        <div class="row justify-content-between mb-2">
							
							<% for admit in admits 
							patient = admit.patient
							
							report  = ERCaseReport.where(:admit_id=>admit.id).first
							report  = ERCaseReport.new(:admit_id=>admit.id) unless report
							
							%>
							
                            <div class="col-6 col-sm-4 admit " >
									<a href="./show?id=<%=admit.id%>" class="">
								<div class="admit-content">
	
								<div class="row">
									
								<div class="col-4">
									<div class="row">
										<div class="col-12 d-flex justify-content-center">
		                                    <span>
		                                        <i class="fas fa-bed pr-2"></i><%= admit.bed_no %>
		                                    </span>
										</div>
									</div>
									<div class="row">
										<div class="col-12 d-flex justify-content-center">
											<div class="level-content <%=report.level if report%>">
										
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-12 d-flex justify-content-center" style="font-size:0.6em" >
										
											<%= admit.duration[0] %>
										
										</div>
									</div>
									
								</div>
								
								<div class="col-8">
									<div class="row">
										<div class="col-12">
										
											  <%= patient.hn %>
										 	
										</div>
									</div>
									<div class="row" >
										<div class="col-12"  >
										
											<%= patient %>
										
										</div>
										
									</div>
									
									<div class="row">
										<div class="col-12" style="overflow:hidden;font-size:0.8em" >
										
											<%= report.chief_complaint %>
										
										</div>
										
									</div>
								
								</div>
							
							</div>	</a>
								</div>
                            </div>
							    <!-- </a> -->
                           <% end %>

                        </div>
                      
                    </div>
                </section>
                <!--end of er-room--> 
                <hr class="hr-new">
            </div>
           
            <div class="container d-flex justify-content-center">
                <a href="./admit" class="btn btn-primary btn-submit d-flex align-items-center justify-content-center">
                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-person-plus-fill " fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7.5-3a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                        <path fill-rule="evenodd" d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
                      </svg>
                    <span class="pl-2 pb-0">เพิ่มใหม่</span>
                </a>
            </div>
        </div>
    </section>

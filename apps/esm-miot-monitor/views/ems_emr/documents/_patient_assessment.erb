<% require_relative 'lib'%>
<%
  @record = record
%>
<div class="card">

<div class="card-header bg-primary text-white">

<center>
<div class="text-white">แบบบันทึกข้อมูลอาการผู้เจ็บป่วย</div>
</center>
</div>

<div class="card-body">

<div class="row">


  <div class="col-12">
<center>
  <input type="radio" id="trauma_1" name="record[trauma_status]" <%='checked' if record['trauma_status']=='trauma' %> value="trauma" class="field"  field_type="radio_string" >
  <label for="trauma_1">Trauma</label>
  <input type="radio" id="trauma_2" name="record[trauma_status]" <%='checked' if record['trauma_status']=='non-trauma' %> value="non-trauma" class="field"  field_type="radio_string" >
  <label for="trauma_2">Non-Trauma</label>
</center>
  </div>

<br/><br/>
<div class="clear"></div>

<div class="card-title d-flex align-items-center">
			<!-- <div>
        <i class="bx bxs-user me-1 font-22 text-primary"></i>
			</div> -->
			<h5 class="mb-0 text-primary">GA :</h5>
</div>

<div class="row">
<div class="col-2"></div>
<div class="col-10">

  <div class="input-group input-group-sm">
		<div class="input-group-text ">
			<input class="form-check-input" type="radio" value="" aria-label="Radio button for following text input">
      &nbsp;<label for="trauma_1">External active bleeding at </label>

		</div>
    <%= text_string this, 'bleeding_at', :field_only=>true %>

    <div class="input-group-text">
      &nbsp;<label for="trauma_1">Blood loss </label>
    </div>
    <%= text_string this, 'blood_loss', :field_only=>true %>
    <div class="input-group-text">
      &nbsp;<label for="trauma_1">CC </label>
    </div>
	</div>
</div>
<br/><br/>
<div class="col-2"></div>
<div class="col-10" style="margin-bottom:20px">
<label for="trauma_1">รายละเอียดที่เจอผู้ป่วยครั้งแรก </label>
<textarea name="record[note]" type="text"  class="field form-control" field_type="text_area" >
<%=record['note']%>
</textarea>
</div>

</div>

<hr/>
<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Response :</h5>
</div>
<div class="row">
<div class="col-2"></div>
<div class="col-10">

<%= radio_string this, 'response',   :value=>%w{alert response_to_voice response_to_pain unresponsive} %>

</div>

<div class="col-2"></div>
<div class="col-10" style="margin-bottom:20px">

<%= radio_string this, 'response_pulse', :value=>%w{pulse no_pulse} %>

</div>

</div>

</div>
<hr/>

<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Airway :</h5>
</div>

<%= check_string this, 'airway_assessment' %>
<div class="row">
<div class="col-2">
</div>
<div class="col-10">
<%= radio_string this, 'airway', :value=>%w{airway_patient airway_compromise}, :col=>12 %>
</div>
</div>
</div>

<div class="col-2">
  </div>
<div class="col-10">

<%= radio_string this, 'airway_compromise', :value=>%w{stridor secretion fb bleeding other}, :col=>12 %>

</div>

<div class="col-12">
<%= check_string this, 'airway_management' %>

<div class="row">
<div class="col-2">
</div>
<div class="col-10">

<%= radio_string this, 'airway_management_type', :value=>%w{suction oral_airway nasal_airway lma}, :col=>12 %>

<div class="row">
<%= text_string this, 'nasal_airway_no', :col=>3 , :label=>'Nasal Airway No.'%>
<%= text_string this, 'lma_no', :col=>3 , :label=>'LMA No.'%>
<div class="clear"></div>
<%= text_string this, 'ett_no', :col=>3, :label=>'ETT No.'%>
<%= text_string this, 'ett_depth', :col=>3, :label=>'Depth(cm)' %>
<%= text_string this, 'ett_glottis_view_grade', :col=>3, :label=>'Glottis view grade' %>
<%= text_string this, 'ett_attempt', :col=>3 , :label=>'Attempt' %>
</div>

</div>
</div>


<div class="col-12" style="margin-bottom:20px">

  <%= text_string this, 'airway_special_note', :col=>12, :label=>'Special Note'%>
</div>

<hr/>

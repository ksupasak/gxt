<% require_relative 'lib'
  @record = record
  r = @record.data

  list = %w{ga heent chest cvs abdomen extremity neurological }
 %><% 
  if mode=='text' and query=='1'
 
  for i in list
%><%
    if r["#{i}_note"] and r["#{i}_note"] != ""
%>
<% if i.humanize == 'Cvs' %>CVS : <%=r["#{i}_note"]%><%else%><%=i.humanize%> : <%=r["#{i}_note"]%>
<% end %>
<% end %>
<% end %>

<% elsif  mode=='text'  and query=='2' %>
<%
  list = %w{sign_and_symptom allergies  medication  history_note intake_note} 
  for i in list
%><%
    if r["#{i}"] and r["#{i}"] != ""
%>
<% if i.humanize == "History note" %>Past History : <%=r["#{i}"]%> <%elsif i.humanize == "Intake note" %>Last Oral Intake : <%=r["#{i}"]%> <%else%><%=i.humanize%> : <%=r["#{i}"]%><% end %><% end %><% end %>
<% elsif  mode=='text'  and query=='3' %>
<%
  list = %w{event }
  for i in list
%><%
    if r["#{i}"] and r["#{i}"] != ""
%><%=r["#{i}"] %>
<% end %>
<% end %>
<% else %>[Secondary Survey]<% end %>

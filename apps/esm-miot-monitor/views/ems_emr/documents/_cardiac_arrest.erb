
<% require_relative 'lib'%>
<%
  @record = record
%>
<style>
.mandatory{color:red;font-weight:bold;}
</style>

<div class="card">

  <div class="card-header bg-primary text-white">
  <center>Cardiac arrest</center>
  </div>

  <div class="card-body">
    <div class="row">

<div class="col-12">
  <%= radio_string this, 'witnessed_cardiac_arrest',   :value=>%w{yes no}, :label=>'Witnessed cardiac arrest <span class="mandatory">*</span>' %>
  <%= radio_string this, 'bystander_cpr',   :value=>["ALS/BLS/อาสา", "พลเมืองดี", "No"], :label=>'Bystander CPR <span class="mandatory">*</span>' %>
  <%= radio_string this, 'aed_use',   :value=>["Shockable", "Non-Shockable", "Not use"], :label=>'AED <span class="mandatory">*</span>' %>

  <%= date_string this, 'last_seen_normal_time', :col=>4 , :label=>'Last seen normal(OHCA) <span class="mandatory">*</span>'%>
  <%= date_string this, 'first_seen_abnormal_time', :col=>4 , :label=>'First seen abnormal(OHCA) <span class="mandatory">*</span>'%>
  <%= date_string this, 'bystander_start_cpr_time', :col=>4 , :label=>'Bystander start CPR time'%>
  <%= date_string this, 'ems_start_cpr_time', :col=>4 , :label=>'EMS start CPR time'%>
  
  <%= radio_string this, 'initial_rhythm',   :value=>["VF/VT", "PEA", "Asystole"], :label=>'Initial rhythm <span class="mandatory">*</span>' %>


  <%= date_string this, 'first_shock_time', :col=>4 %>
  <%= date_string this, 'first_amiodarone_time', :col=>4 , :label=>'First Amiodarone 300 mg time'%>
  <%= date_string this, 'third_shock_time', :col=>4 , :label=>'3rd shock time'%>

  <%= text_string this, 'shock_time', :col=>4, :label=>'Shock times(ครั้ง)'%>

  <%= date_string this, 'first_adrenaline_time', :col=>4 %>
  <%= date_string this, 'on_ett_time', :col=>4 , :label=>'On ETT time'%>
  <%= date_string this, 'autopulse_time', :col=>4 %>

  <%= radio_string this, 'rapid_bystander_cpr',   :value=>["Yes", "No"], :label=>'Rapid bystander CPR <span class="mandatory">*</span>' %>
  <%= radio_string this, 'initial_shockable',   :value=>["Yes", "No"], :label=>'Initial shockable <span class="mandatory">*</span>' %>
  <%= radio_string this, 'age_70',   :value=>["Yes", "No"], :label=>'Age<70 yr <span class="mandatory">*</span>' %>
  <%= radio_string this, 'status_good_functional',   :value=>["Yes", "No"], :label=>'Status เดิม good functional <span class="mandatory">*</span>' %>
  <%= radio_string this, 'no_sign',   :value=>["Yes", "No"], :label=>'No sign of end stage disease <span class="mandatory">*</span>' %>
  <%= radio_string this, 'on_scene_to_ed',   :value=>["Yes", "No"], :label=>'On scene to ED within 30 min. <span class="mandatory">*</span>' %>
  <%= radio_string this, 'on_autopulse',   :value=>["Yes", "No"], :label=>'On autopulse <span class="mandatory">*</span>' %>
  <%= radio_string this, 'etco2',   :value=>["Yes", "No"], :label=>'EtCO2>10mmHg. <span class="mandatory">*</span>' %>
  <%= date_string this, 'consult_ecmo_time', :col=>4 , :label=>'Consult EP for ECMO time'%>

  <%= radio_string this, 'ecmo_at_ed',   :value=>["Yes", "No"], :label=>'ECMO at ED <span class="mandatory">*</span>' %>
  <%= date_string this, 'ecmo_time', :col=>4 , :label=>'ECMO time'%>
  
  <%= radio_string this, 'rosc',   :value=>["Yes", "No", "Unknown"], :label=>'ROSC <span class="mandatory">*</span>' %>
 <%
  list = <<LIST
1|Unknown
2|Hypovolemia
3|Hypoxia
4|Acidosis
5|Hyper/Hypokalemia
6|Hyper/Hypothermia
7|Hypoglycemia
8|Tension pneumothorax
9|Cardiac tamponade
10|Toxin
11|Pulmonary embolism
12|STEMI
13|อื่นๆ
LIST
%>
<%= check_string this, 'cause_of_arrest', :value=>list.split("\n"),:pair=>true,:col_item=>'col-6', :col=>10 , :label=>'Cause of Arrest <span class="mandatory">*</span>'%>
<%= text_string this, 'cause_of_arrest_other', :col=>8, :label=>''%>


</div>

<div class="col-12"><br/></div>



    </div><!--row-->
  </div><!--card body-->
</div><!--card-->

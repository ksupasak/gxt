<% require_relative 'lib'%>
<%
  @record = record
  @record_id = record_id

  if record['trauma_status'] == nil 
    record['trauma_status'] = 'non-trauma'
  end

  if record['response'] == nil
    record['response'] = 'Alert'
  end

  if record['bleeding_at'] == nil
    record['bleeding_at'] = 'No_Active_Bleeding'
  end  

  if record['airway'] == nil
    record['airway'] = 'Patent' 
  end
%>
<style>
.mandatory{color:red;font-weight:bold;}
</style>
<div class="card">

<div class="card-header bg-primary text-white">

<center>
<div class="text-white">Primary Survey</div>
</center>
</div>

<div class="card-body">

<div class="row">


  <div class="col-12">
<center>
  <input type="radio" id="trauma_1" name="record[trauma_status]" <%='checked' if record['trauma_status']=='trauma' %> value="trauma" class="field"  field_type="radio_string" >
  <label for="trauma_1">Trauma</label>
  <input type="radio" id="trauma_2" name="record[trauma_status]" <%='checked' if record['trauma_status']=='non-trauma' %> value="non-trauma" class="field"  field_type="radio_string" >
  <label for="trauma_2">Non-Trauma</label>
</center>
  </div>

<br/><br/>
<div class="clear"></div>

<div class="card-title d-flex align-items-center">
			<!-- <div>
        <i class="bx bxs-user me-1 font-22 text-primary"></i>
			</div> -->
			<h5 class="mb-0 text-primary">GA :</h5>
</div>


<div class="col-2"></div>
<div class="col-10" style="margin-bottom:20px">
<label for="trauma_1">รายละเอียดที่เจอผู้ป่วยครั้งแรก </label>
<textarea name="record[note]" type="text"  class="field form-control" field_type="text_area" >
<%=record['note']%>
</textarea>
</div>

</div>

<hr>
<div class="col-12">

<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Response :</h5>
</div>

<div class="row">
<div class="col-2"></div>
<div class="col-10">

<%= radio_string this, 'response',   :value=>%w{Alert Response_to_voice Response_to_pain Unresponsive} %>

</div>

    
<div class="col-2"></div>
<div class="col-10" style="margin-bottom:20px">

<%= radio_string this, 'response_pulse', :value=>%w{Pulse No_Pulse} %>

</div>



</div>


 
<hr/>
  <div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">eXsanuinate Hemorrhage :</h5>
  </div>
  <div class="row">
  <div class="col-2"></div>
  <div class="col-10">

  <div class="input-group input-group-sm">
    <div class="input-group-text">
     <%= radio_string this, 'bleeding_at', :value=>%w{Active_Bleeding} %>
     </div>
     <%= text_string this, 'blood_loss', :field_only=>true %>
     <div class="input-group-text">
     &nbsp;<label for="trauma_1">CC </label>
     </div>
     <div class="input-group-text">
     <%= radio_string this, 'bleeding_at', :value=>%w{No_Active_Bleeding} %>
      </div>
	  </div>
  </div>
 


</div>
<hr/>

<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Airway :</h5>
</div>

<div class="row">
<div class="col-2">
</div>
<div class="col-10">
<%= radio_string this, 'airway', :value=>%w{Patent}, :col=>12 %>
</div>



<div class="col-2">
  </div>
<div class="col-10">

<%= check_string this, 'airway_compromise', :value=>%w{Stridor Secretion Soreign_body Bleeding Other}, :label=>"", :col=>12 %>

</div>

<div class="row">
<div class="col-2">
  </div>
<div class="col-10" style="margin-bottom:20px">

  <%= text_string this, 'airway_special_note', :col=>10, :label=>'Note'%>
</div>
</div>

<hr/>
<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Breathing :</h5>
</div>

<div class="row">
<div class="col-2">Characteristics</div>
<div class="col-10"> 
<%= radio_string this, 'breath_status', :value=>%w{Normal No_breath Tachypnea Bradypnea Apnea Air_Hunger Other}, :col=>12 %>
</div>
</div>
<div style="height: 10px"></div>
<div class="row">
<div class="col-2">
Sound
</div>
<div class="col-10">
<%= radio_string this, 'breath_lung_clear',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Lung clear', :col=>12 %>
<%= radio_string this, 'breath_wheezing',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Wheezing', :col=>12 %>
<%= radio_string this, 'breath_rhonchi',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Rhonchi', :col=>12 %>
<%= radio_string this, 'breath_crepitation',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Crepitation', :col=>12 %>
<%= radio_string this, 'breath_descrease',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Decrease breath sound', :col=>12 %>
<%= text_string this, 'breath_other', :col=>4, :label=>'Other'%>
</div>
</div>
<div class="row">
<div class="col-2">
Accessory muscles used
</div>
<div class="col-10">
<%= radio_string this, 'breath_amu_s1',:value=>%w{Yes No}, :label=>'Sternocleidomastoids', :col=>12 %>
<%= radio_string this, 'breath_amu_s2',:value=>%w{Yes No}, :label=>'Scalenes', :col=>12 %>
<%= radio_string this, 'breath_amu_s3',:value=>%w{Yes No}, :label=>'External Intercostals', :col=>12 %>
<%= radio_string this, 'breath_amu_s4',:value=>%w{Yes No}, :label=>'Internal Intercostals', :col=>12 %>
<%= radio_string this, 'breath_amu_s5',:value=>%w{Yes No}, :label=>'Diaphragm', :col=>12 %>
<%= radio_string this, 'breath_amu_s6',:value=>%w{Yes No}, :label=>'Abdominal muscles', :col=>12 %>

<%= text_string this, 'breath_amu_other', :col=>4, :label=>'Other'%>
</div>
</div>

<div style="height: 10px"></div>
<div class="row">
<div class="col-2">
Percussion
</div>
<div class="col-10">
<%= radio_string this, 'percussion_resonance',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Resonance', :col=>12 %>
<%= radio_string this, 'percussion_dullness',:value=>%w{Rt Lt Equal_both_lung}, :label=>'Dullness', :col=>12 %>
</div>
</div>
<div style="height: 10px"></div>
<div class="row">
<div class="col-2">
Palpation
</div>
<div class="col-10">
<%= radio_string this, 'palpation_subcutaneous',:value=>%w{Rt Lt Equal_both_lung No}, :label=>'Subcutaneous emphysema', :col=>12 %>
<%= text_string this, 'palpation_deformity', :col=>4, :label=>'wound' %>
</div>
</div>
</div>

<div class="row">
<div class="col-2">

</div>

<div class="col-10" style="margin-bottom:20px">

  <%= text_string this, 'breath_special_note', :col=>10, :label=>'Note'%>
</div>
</div>
<hr/>

<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Circulation :</h5>
</div>
<div class="row">
<div class="col-12">
</div>
<div class="col-2">Skin</div>
<div class="col-10">
<%= radio_string this, 'circulation_skin',:value=>%w{Normal Pale Sweat Cold}, :col=>12 %>
</div>
<div style="height: 10px"></div>
<div class="col-2">Pulse</div>
<div class="col-10">
<%= radio_string this, 'circulation_pulse',:value=>%w{Weak Full Irregular}, :col=>12 %>
</div>
<div style="height: 10px"></div>
<div class="row">
  <div class="col-2">
    Capillary
  </div>
  <div class="col-6">
  <%= radio_string this, 'circulation_capillary',:value=>%w{Fastly <2 >2 Prolong}, :col=>12 %>
  </div>
</div>
<div style="height: 10px"></div>


<div class="row">
<div class="col-2">
</div>

<div class="col-10" style="margin-bottom:20px">
  <%= text_string this, 'circulation_special_note', :col=>10, :label=>'Note'%>
</div>

</div>



<hr/>
<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Disability :</h5>
</div>
<div class="row">
<div class="col-2">
  GCS
</div>
<div class="col-10">
<div class="row">
<%= select_string this, 'gcs_e', :col=>3, :label=>'E', :value=>%w{1 2 3 4}%>
<%= select_string this, 'gcs_v', :col=>3, :label=>'V' , :value=>%w{1 2 3 4 5 T}%>
<%= select_string this, 'gcs_m', :col=>3, :label=>'M' , :value=>%w{1 2 3 4 5 6}%>
</div>
</div>
</div>
<div style="height: 10px"></div>
<div class="row">
<div class="col-2">
  Pupil
</div>
<div class="col-10">
<div class="row">
<br />
<%= text_string this, 'pupil_rt', :col=>3, :label=>'Rt(mm)'%>
<%= radio_string this, 'pupil_rt_rtl',:value=>%w{Rtl Nrtl Slightly Fxed}, :col=>6 %>
<div class="clear"></div>
<%= text_string this, 'pupil_lt', :col=>3, :label=>'Lt(mm)'%>
<%= radio_string this, 'pupil_lt_rtl',:value=>%w{Rtl Rrtl Slightly Fxed}, :col=>6 %>
 
</div>
</div>
</div>
<div style="height: 10px"></div>


<hr/>

<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Exposure :</h5>
</div>

<div class="row">
<div class="col-2">
</div>
<%= check_string this, 'exposure_list', :value=>%w{Deformity Contusion Abration Penetration Burns Tenderness Laceration Swelling Pitting_edema }, :col=>10, :col_item=>"col-12" %>
</div>
<div class="row">
<div class="col-2">
</div>
<div class="col-10">
    <%= text_string this, 'exposure_special_note', :col=>10, :label=>'Note'%>
	

</div>

</div>
</div>

<hr/>
<div class="col-12">
<div class="card-title d-flex align-items-center">
			<h5 class="mb-0 text-primary">Vital :</h5>
</div>
<div class="row">
<div class="col-2">
</div>
<div class="col-9">
<div class="row">

   for j in list
   
   i = "vs_"+j

%><%
  if r["#{i}"] 
	
	v = r[i]
	
	if j=='sbp'
		v = "#{r['vs_sbp']}/#{r['vs_dbp']}"
		j = "bp"
  end	
	
	rs << "#{j.upcase} : #{v}"
		
%><% end %><% end %>VS first : <%=rs.join(", ")%>

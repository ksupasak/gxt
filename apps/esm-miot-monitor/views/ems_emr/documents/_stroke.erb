
<% require_relative 'lib'%>
<%
  @record = record
%>
<style>
.mandatory{color:red;font-weight:bold;}
</style>
<div class="card">

  <div class="card-header bg-primary text-white">
  <center>Stroke</center>
  </div>

  <div class="card-body">
    <div class="row">

<%= radio_string this, 'fast_track',   :value=>["Yes", "No"], :label=>'Fast track <span class="mandatory">*</span>' %>

<%= check_string this, 'chief_complain',:col_item=>'col-3', :col=>12,   :value=>%w{weakness dysarthria vertigo seizure อื่นๆ}, :label=>'Chief complain of Stroke <span class="mandatory">*</span>' %>
<%= text_string this, 'chief_complain_other', :col=>4, :label=>''%>

<div class="col-12">
<%= select_string this, 'upper_rt',:value=>%w{0 I II III IV V}, :col=>4 , :label=>'Upper Rt. Motor Power <span class="mandatory">*</span>'%>
<%= select_string this, 'upper_lt',:value=>%w{0 I II III IV V}, :col=>4 , :label=>'Upper Lt. Motor Power <span class="mandatory">*</span>'%>
<%= select_string this, 'lower_rt',:value=>%w{0 I II III IV V}, :col=>4 , :label=>'Lower Rt. Motor Power <span class="mandatory">*</span>'%>
<%= select_string this, 'lower_lt',:value=>%w{0 I II III IV V}, :col=>4 , :label=>'Lower Lt. Motor Power <span class="mandatory">*</span>'%>

<%= date_string this, 'last_seen_normal_time', :col=>4 , :label=>'Last seen normal <span class="mandatory">*</span>'%>
<%= date_string this, 'first_seen_abnormal_time', :col=>4 , :label=>'First seen abnormal <span class="mandatory">*</span>'%>
<%= date_string this, 'stroke_fasttrack_time', :col=>4 , :label=>'EMS Activated stoke fast track time'%>
<%= date_string this, 'ct_time', :col=>4 , :label=>'CT time'%>

<%= text_string this, 'lvo_score', :col=>4, :label=>'LVO score <span class="mandatory">*</span>'%>

<%= radio_string this, 'transfer',   :value=>["Yes", "No"], :label=>'Transfer stoke unit <span class="mandatory">*</span>' %>

<%= radio_string this, 'thrombectomy',   :value=>["Yes", "No"], :label=>'Thrombectomy' %>
</div>
    </div><!--row-->
  </div><!--card body-->
</div><!--card-->

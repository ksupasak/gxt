<div class="row">
<div class="col-lg-8">
<div id="emr-panel">
</div>
</div>

<div class="col-lg-4">
<div class="card">
<div class="card-header bg-secondary text-white">
</div>
<div class="card-body">
<% for doc in documents %>

	<li>
	<a href="<%=get_path 'create'%>?document=<%=doc.name%>&case_id=<%=params[:id]%>" class="btn btn-info  emr-create-btn">+ <%=doc.title%></a>
	<%
			records = EMRRecord.where(:case_id=>record.id, :document_id=>doc.id).all
	%>
	<ul>
		<% for i in records %>
		<li>
		<a href="<%=get_path 'update'%>?document=<%=doc.name%>&case_id=<%=params[:id]%>&id=<%=i.id%>" class="btn btn-outline-info emr-update-btn">Record <%=i.stamp%></a>
		</li>
		<% end %>
	</ul>

	</li>
<% end %>
</div>
</div>
</div>

</div>

<script>
	$('.emr-create-btn').click(function(e){

		$.ajax({
			url: $(this).attr('href') ,
			context: document.body
		}).done(function(html) {

			$( '#emr-panel' ).html(html);
		});

		e.preventDefault();

	})
	$('.emr-update-btn').click(function(e){

		$.ajax({
			url: $(this).attr('href') ,
			context: document.body
		}).done(function(html) {

			$( '#emr-panel' ).html(html);
		});

		e.preventDefault();

	})
</script>

<% if @current_user.status=='Active' %>
  <style>
    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0; top: 0;
      width: 100%; height: 100%;
      background-color: rgba(0,0,0,0.5);
    }
    .modal-content {
      background-color: #fff;
      margin: 15% auto;
      padding: 20px;
      width: 300px;
      text-align: center;
      border-radius: 8px;
    }
    .modal button {
      margin: 10px;
      padding: 8px 16px;
    }
  </style>

<div id="popupModal" class="modal">
  <div class="modal-content">
    <p>Do you want to notify the team?</p>
    <button id="yesBtn" class="btn btn-success">Yes</button>
    <button id="noBtn" class="btn btn-danger">No</button>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#popupModal').fadeIn();

    $('#yesBtn').click(function() {
      $.ajax({
        url: 'notify',  // replace with your endpoint
        type: 'POST',
        data: JSON.stringify({ notify: true }),
        contentType: 'application/json',
        success: function(response) {
          console.log('Team notified:', response);
        },
        error: function(err) {
          console.error('Error notifying team:', err);
        }
      });
      $('#popupModal').fadeOut();
    });

    $('#noBtn').click(function() {
      $('#popupModal').fadeOut();
    });
  });
</script>
<% end %>

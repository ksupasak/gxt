<h1>Welcome ! <%=GXTCMS::SettingController.version%></h1>
<%= Setting.size %>

<div class="row">
  <div class="col-md-9">
	
	<div class="row">
  	
  <h3> Today Account </h3>
  
  <%
	
	accounts = Account.where(:updated_at=>{'$gte'=>Date.new.beginning_of_day}).all
	# accounts = Account.all
	
  %>
<table class="table">
   <% for i in accounts %>
	<tr>
		<td><%=i.code%></td>
		<td><%=i.gold_price%></td>
		<td><%=i.weight%></td>
		<td><%=i.total_amount%></td>
		<td><%=i.updated_at%></td>
		<td><%=link_to 'Show', "../Account/show?id=#{i.id}", :class=>'btn btn-default'%></td>
		
		</tr>
   <% end %>
</table>

</div>

<div class="row">
	  <h3> Today Member </h3>

	  <%

		members = Member.where(:updated_at=>{'$gte'=>Date.new.beginning_of_day}).all
		# accounts = Account.all

	  %>
	<table class="table">
	   <% for i in members %>
		<tr>
			<td><%=link_to i.name, "../Member/show?id=#{i.id}"%></td>
			<td><%=i.code%></td>
			<td><%=i.tel%></td>
			<td><%=link_to 'Show', "../Member/show?id=#{i.id}" , :class=>'btn btn-default'%></td>
			</tr>
	   <% end %>
	</table>
</div>



  </div>



  <div class="col-md-3">
	
<%= link_to 'Create Member', "../Member/create", :class=>'btn btn-info'%> 
<%= link_to 'Create Account', "../Account/create", :class=>'btn btn-info'%>
</div>
</div>
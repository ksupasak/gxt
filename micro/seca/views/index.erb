<script src="/js/jquery-1.9.1.min.js"></script>


<form action="/send" method="post">
  <label for="fname">Weight :</label><br>
  <input type="text" id="weight" name="fname" value="John"><br>
  <label for="lname">Height :</label><br>
  <input type="text" id="height" name="lname" value="Doe"><br><br>
  <input type="submit" value="Submit">
</form> 

<div id="out"></div>

<script>

	function fresh(){
		
		$.ajax({
		  url: "/get",
		  context: document.body
		}).done(function(data) {
			console.log(data)
			obj = JSON.parse(data)
			$('#weight').val(obj['weight'])
			$('#height').val(obj['height'])
			
			$('#out').html(data);
		});
		
	}

setInterval(fresh, 1000);


</script>
</body>

<script>

	function fresh(){
		
		$.ajax({
		  url: "/get",
		  context: document.body
		}).done(function(data) {
			console.log(data)
			obj = JSON.parse(data)
			$('#weight').val(obj['weight'])
			$('#height').val(obj['height'])
			
			$('.weight').html(obj['weight'])
			$('.height').html(obj['height'])
			
			// $('#out').html(data);
		});
		
	}

setInterval(fresh, 1000);

</script>

